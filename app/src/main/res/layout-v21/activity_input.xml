<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/input_drawerLayout"
    tools:context="com.example.chamikanandasiri.gpacal.InputActivity"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">
    <!--tools:openDrawer="start"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:id="@+id/input_toolbar"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:elevation="4dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frame_layout">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/input_textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/input_TextView1"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.252"
                        app:layout_constraintVertical_bias="0.100000024" />

                    <TextView
                        android:id="@+id/input_textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/input_TextView2"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.179"
                        app:layout_constraintVertical_bias="0.25" />

                    <EditText
                        android:id="@+id/input_editText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:hint="@string/input_EditText2Hint"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.747"
                        app:layout_constraintVertical_bias="0.24000001" />

                    <Button
                        android:id="@+id/input_button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/button_colours"
                        android:textColor="@color/button_text_colours"
                        android:text="@string/input_Button1Text"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintVertical_bias="0.45" />

                    <EditText
                        android:id="@+id/input_editText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:hint="@string/input_EditText1Hint"
                        android:inputType="number"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintVertical_bias="0.07999998"
                        app:layout_constraintHorizontal_bias="0.698" />

                    <Spinner
                        android:id="@+id/input_spinner2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintVertical_bias="0.7" />

                    <Spinner
                        android:id="@+id/input_spinner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.201"
                        app:layout_constraintVertical_bias="0.7" />

                    <Button
                        android:id="@+id/input_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/button_colours"
                        android:textColor="@color/button_text_colours"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text="@string/input_Button2Text"
                        app:layout_constraintVertical_bias="0.7"
                        app:layout_constraintHorizontal_bias="0.89" />

                    <Button
                        android:id="@+id/input_button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/button_colours"
                        android:text="@string/input_Button3Text"
                        android:textColor="@color/button_text_colours"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="0dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginLeft="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintVertical_bias="0.9"
                        app:layout_constraintHorizontal_bias="0.75" />

                    <Button
                        android:id="@+id/input_button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/input_Button4Text"
                        android:backgroundTint="@color/button_colours"
                        android:textColor="@color/button_text_colours"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginRight="0dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.2"
                        app:layout_constraintVertical_bias="0.9" />

                </android.support.constraint.ConstraintLayout>
            </FrameLayout>
        </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/input_navigationView"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/drawer_menu"/>




</android.support.v4.widget.DrawerLayout>
